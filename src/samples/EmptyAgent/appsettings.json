{
  "TokenValidation": {
    "Enabled": false
    // "Audiences": [ "client-id" ], // Configured in user secrets
    // "TenantId": "tenant-id" // Configured in user secrets
  },

  "AgentApplication": {
    "StartTypingTimer": false,
    "RemoveRecipientMention": false,
    "NormalizeMentions": false
  },

  "Connections": {
    "ServiceConnection": {
      "Settings": {
        "AuthType": "ClientSecret", // this is the AuthType for the connection, valid values can be found in Microsoft.Agents.Authentication.Msal.Model.AuthTypes.  The default is ClientSecret.
        // "AuthorityEndpoint": "https://login.microsoftonline.com/tenant-id", // Configured in user secrets
        // "ClientId": "client-id", // Configured in user secrets
        // "ClientSecret": "client-secret", // Configured in user secrets
        "Scopes": [
          "https://api.botframework.com/.default"
        ]
      }
    }
  },
  "ConnectionsMap": [
    {
      "ServiceUrl": "*",
      "Connection": "ServiceConnection"
    }
  ],

  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  }
}